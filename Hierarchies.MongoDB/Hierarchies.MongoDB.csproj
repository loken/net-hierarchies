<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Loken.Hierarchies.MongoDB</AssemblyName>
    <RootNamespace>Loken.Hierarchies.Data.MongoDB</RootNamespace>

    <Title>Hierarchies MongoDB</Title>
    <Description>MongoDB extension of Hierarchies.NET</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="3.4.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Hierarchies\Hierarchies.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="MongoDB.Driver" />
  </ItemGroup>

</Project>
